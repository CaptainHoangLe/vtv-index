<link rel="stylesheet" href="{{asset "custom/breadcrumb-navigation.css"}}">

{{!< default}} {{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template
    --}} <main id="site-main" class="site-main outer">
    <div class="inner">
        {{!-- Breadcrumb Navigation --}}
          <div class="breadcrumb-navigation">
            <a href="{{@site.url}}" class="home">Trang chủ</a>
                        {{> "icons/chevron-right"}}

            <span class="tag-name">
                {{#if tag}}
                {{tag.name}}
                {{/if}}
            </span>
        </div>

        {{!-- Post Feed Section --}}
        <div class="posts">
            <div class="main-post">
                {{#with (split_first_post posts first=true)}}
                {{> "highlight-news" title=title image=feature_image date=date url=url}}
                {{/with}}
            </div>
            <div class="left-post">
                <div class="feature-post__heading"> {{> "icons/arrow-right"}}
                    <span>Tin tiêu điểm</span>
                </div>
                <div class="feature-post">
                    {{#foreach (featured_posts posts)}}
                    {{!-- <div class="post-card">
                        {{#if feature_image}}
                        <div class="post-card-image">
                            <img src="{{feature_image}}" alt="{{title}}">
                        </div>
                        {{/if}}
                        <div class="post-card-content">
                            <h4 class="post-card-title">{{title}}</h4>
                            <div class="post-card-excerpt">{{excerpt words="20"}}</div>
                            <div class="post-card-meta">
                                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="DD/MM/YYYY"}}</time>
                            </div>
                            <a class="post-card-link" href="{{url}}">Xem thêm</a>
                        </div>
                    </div> --}}
                    {{> "featured-news" url=url image=feature_image title=title description=excerpt date=date}}
                    {{else}}
                    <p>Không có bài viết nào khác</p>
                    {{/foreach}}
                </div>
            </div>
        </div>

        {{pagination}}
    </div>
    </main>

    {{!-- Add inline styles for the layout --}}
    <style>
        .feature-post__heading {
            font-size: 32px;
            font-weight: 600;
            color: #262626;
            margin-top: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .posts {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin-top: 30px;
        }

        .main-post {
            flex: 2;
        }

        .main-post .hightlight-news {
            height: 100%;
        }

        .left-post {
            flex: 2;
            display: flex;
            flex-direction: column;
            padding: 25px;
            gap: 20px;
            background-color: #EBEEF3;
        }

        .feature-post {
            flex: 3;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            gap: 30px;
        }
    </style>